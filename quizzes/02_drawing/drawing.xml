<question type="shortanswer">
    <name>
        <text>How to use a library</text>
    </name>
     <questiontext format="html">
         <text>
            In order to use the "arcade" library, what exact code needs to be
            included in your program before any arcade commands can be called?
        </text>
    </questiontext>

    <!-- Case sensitive flag -->
    <usecase>1</usecase>

    <answer fraction="100">
        <text>import arcade</text>
        <feedback><text>Correct!</text></feedback>
    </answer>
</question>

<question type="multichoice">
    <name>
        <text>Where import statements go.</text>
    </name>
     <questiontext format="html">
         <text>
            Where do import statements go?
        </text>
    </questiontext>

    <!-- Case sensitive flag -->
    <usecase>1</usecase>

    <answer fraction="100">
        <text>At the top of the program.</text>
        <feedback><text>Correct!</text></feedback>
    </answer>

    <answer fraction="0">
        <text>Right before you use them.</text>
        <feedback>
            <text>
                No, they go at the very top. No other code should go
                before the import statement, except maybe comments.
            </text>
        </feedback>
    </answer>

    <answer fraction="0">
        <text>At the end of the program.</text>
        <feedback>
            <text>
                No, they go at the very top. No other code should go
                before the import statement, except maybe comments.
            </text>
        </feedback>
    </answer>

</question>


